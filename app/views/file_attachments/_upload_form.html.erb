<% if defined?(container) && container %>
  <% new_file_attachment = FileAttachment.new(:attachable => container) %>
<% else %>
  <% new_file_attachment = FileAttachment.new %>
<% end %>
<% semantic_form_for new_file_attachment, :html => { :multipart => true } do |f| %>

  <%= 
